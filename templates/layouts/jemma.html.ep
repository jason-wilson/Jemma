<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/css/base.css">
    <link rel="stylesheet" type="text/css" href="/css/table.css">
    <title><%= $title %></title>
  </head>

  <body>
    <div class="container">
      <div class="header">
	<h1><%= $title %></h1>
      </div>

      <div class="menu">
        <%= link_to "Sources"    => '/source' %> <br />
        <%= link_to "IP list"    => '/ip'     %> <br />
        <%= link_to "Service list" => '/service'     %> <br />
        <%= link_to "Group list" => '/group'  %> <br />
	<hr />

	<%= form_for '/ip/search' => (method => 'post') => begin %>
	  IP: <%= text_field 'ip' %>
	  <%= submit_button 'Search' %>
	<% end %><br />
	<%= form_for '/group/search' => (method => 'post') => begin %>
	  Group: <%= text_field 'group' %>
	  <%= submit_button 'Search' %>
	<% end %><br />

      </div>

      <div class="content">
	<%= content %>
      </div>

      <div class="footer">
	This is the footer
      </div>
    </div>
  </body>
</html>
